</body>
<script>

    if ("<%=isLogin%>" == "true"){
        $('#default-btn').addClass("d-none");
        $("#login-btn").removeClass("d-none");
    }

 function user_login(){
    var form = document.getElementById('form_info');
    axios({
        method : 'post',
        url : '/login',
        data : {
            id : form.id.value,
            pw : form.pw.value
        }
    })
    .then((response)=>{
        console.log(response.data);
        if (response.data == true){
            alert('로그인 성공');

        }
    });
   }


</script>
