<body>
    <div id="msg"></div>
    <nav class="navbar bg-light">

        <form id="form_info" class="container-fluid justify-content-start">
            <div class="input_">
                id : <input type="text" name="id">
                pw : <input type="password" name="pw">
            </div>
        <div id="default-btn">
            <button class="btn btn-outline-success me-2" type="button" onclick="user_login()">로그인</button>
