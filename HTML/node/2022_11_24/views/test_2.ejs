    function sendPost(){
        var form = document.getElementById('form_info');
        axios({
            method : "post",
            url : "/test_form2",
            data: { id_ : form.id.value,
                    ps_ : form.password.value
                    }
        }).then(function(res){
            document.getElementById('result').innerHTML = res.data;
        });
